<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/javafx" xmlns="http://javafx.com/javafx"
      fx:controller="com.gymmanagement.controllers.TrainerFeedbackController"
      alignment="CENTER" spacing="20">


    <Label text="Submit Feedback for Trainer" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ChoiceBox fx:id="trainerChoiceBox" prefWidth="300" />
    <TextArea fx:id="feedbackTextArea" promptText="Write your feedback here..." prefRowCount="4" prefWidth="300" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Rating:" />
        <Slider fx:id="ratingSlider" min="1" max="5" majorTickUnit="1" showTickLabels="true" showTickMarks="true" prefWidth="200" />
    </HBox>

    <Button fx:id="submitButton" text="Submit Feedback" onAction="#handleSubmitFeedback" />
    <Button text="Cancel" onAction="#handleCancel" />
</VBox>
