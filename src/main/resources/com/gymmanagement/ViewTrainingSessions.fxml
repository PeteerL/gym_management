<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.gymmanagement.controllers.ViewTrainingSessionsController" spacing="10" alignment="CENTER">
    <Label text="Training Sessions" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="trainingTable" prefWidth="600" prefHeight="400">
        <columns>
            <TableColumn fx:id="sessionTypeColumn" text="Session Type" prefWidth="150" />
            <TableColumn fx:id="sessionDateColumn" text="Date" prefWidth="150" />
            <TableColumn fx:id="capacityColumn" text="Allocated Spots" />
            <TableColumn fx:id="availableSlotsColumn" text="Available Slots" />
        </columns>
    </TableView>

</VBox>
