<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.gymmanagement.controllers.ViewActivityStatisticsController" spacing="10" alignment="CENTER">
    <Label text="Activity Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="activityTable" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn fx:id="logDateColumn" text="Date" prefWidth="150" />
            <TableColumn fx:id="durationMinutesColumn" text="Duration (minutes)" prefWidth="150" />
            <TableColumn fx:id="activityTypeColumn" text="Activity Type" prefWidth="300" />
        </columns>
    </TableView>

    <Label fx:id="totalSessionsLabel" text="Total Sessions: " />
    <Label fx:id="totalDurationLabel" text="Total Duration: " />
    <Label fx:id="averageDurationLabel" text="Average Duration: " />

    <BarChart fx:id="activityChart" prefWidth="600" prefHeight="400">
        <xAxis>
            <CategoryAxis label="Date" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Duration (minutes)" />
        </yAxis>
    </BarChart>
</VBox>
