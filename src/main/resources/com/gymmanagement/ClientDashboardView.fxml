<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/javafx" xmlns="http://javafx.com/javafx"
      fx:controller="com.gymmanagement.controllers.ClientDashboardController"
      fx:id="root" alignment="CENTER" spacing="20" style="-fx-padding: 20;">


    <Label fx:id="welcomeLabel" text="Welcome, Client!" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Button text="View Subscription" onAction="#handleViewSubscription" />
    <Button text="Schedule Training Session" onAction="#handleScheduleTrainingSession" />

    <!-- Feedback Section -->
    <Button text="Send Feedback to Staff" onAction="#handleSendFeedbackToStaff" />
    <Button text="Review Trainer" onAction="#handleReviewTrainer" />

    <!-- Other functionalities -->
    <Button text="View Activity Statistics" onAction="#handleViewActivityStatistics" />

    <!-- Logout Button -->
    <Button text="Logout" onAction="#handleLogout" style="-fx-text-fill: red;" />
</VBox>
