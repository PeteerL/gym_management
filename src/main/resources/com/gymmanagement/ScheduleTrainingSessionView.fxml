<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/javafx"
      xmlns="http://javafx.com/javafx"
      fx:controller="com.gymmanagement.controllers.ScheduleTrainingSessionController"
      alignment="CENTER" spacing="10" prefWidth="600" prefHeight="400">

    <Label text="Schedule a Training Session" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Select Trainer:" />
        <ComboBox fx:id="trainerComboBox" prefWidth="200" />
    </HBox>

    <TableView fx:id="trainingSessionTable" prefWidth="600" prefHeight="300">
        <columns>
            <TableColumn fx:id="sessionIdColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="sessionTypeColumn" text="Session Type" prefWidth="150" />
            <TableColumn fx:id="sessionDateColumn" text="Date &amp; Time" prefWidth="150" />
            <TableColumn fx:id="capacityColumn" text="Capacity" prefWidth="100" />
            <TableColumn fx:id="availableSlotsColumn" text="Available Slots" prefWidth="100" />
            <TableColumn fx:id="enrolledColumn" text="Enrolled" prefWidth="50" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="enrollButton" text="Enroll" />
        <Button fx:id="withdrawButton" text="Withdraw" />
    </HBox>

</VBox>
